{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "improv",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"match": "(AWAIT )?(TOUCH|TAP|PRESS|UP|DOWN|LEFT|RIGHT|ZIGZAG|CIRCLE|CUSTOM)(.*)",
				"captures": {
					"1": { "name":"constant.other"},
					"2": { "name":"keyword.operator.new"},
					"3": { "name":"constant.language"}
				}
			},
			{
				"match": "(AWAIT)( [A-Za-z]+)",
				"captures": {
					"1": {
						"name": "constant.other"
					},
					"2": {
						"name": "constant.language"
					}
				}
			},
			{
				"name": "keyword.operator.logical",
				"match": "(TRUE|FALSE|AND|OR)"
			},
			{
				"name": "constant.numeric",
				"match": "(DAWN|DUSK|SUNRISE|SUNSET|DAY|NIGHT|MORNING|NOON|AFTERNOON|EVENING|MOMENTS|LATER|CONTINUOUS|UNKNOWN)"
			},
			{
				"name":"constant.character",
				"match": "([ ][-][ ]|[ ][-]|[-][ ])"
			},
			{
				"name": "constant.numeric",
				"match": "([0-9][0-9]:[0-9][0-9])"
			},
			{
				"match": "(INT.|EXT.|I/E.|E/I.)[ ]([A-Za-z,' ]+)",
				"captures": {
					"1": { "name":"markup.heading"},
					"2": { "name":"string.quoted"}
				}
			},
			{
				"match": "(BCU|CA|CU|ECU|ESTABLISHING SHOT|ESTABLISHING|FULL SHOT|FULL|EWS|EXTREME LONG SHOT|EXTREME|EYE|LEVEL|EYE LEVEL|FS|HAND HELD|HIGH ANGLE|HIGH|LONG LENS SHOT|LONG|LONG SHOT|LOW ANGLE|LOW|MCU|MED|MEDIUM LONG SHOT|MEDIUM SHOT|MEDIUM|MID SHOT|MID|MWS|NODDY|NODDY SHOT|POV|PROFILE|PROFILE SHOT|REVERSE|REVERSE SHOT|OSS|BEV|TWO SHOT|TWO|VWS|WEATHER SHOT|WEATHER|WS)([ ]?[-][ ]?)([A-Za-z-'/. ]+)(,[ ]?[A-Za-z-'/. ]+)?",
				"captures": {
					"1": { "name":"entity.name.function"},
					"2": { "name":"constant.character"},
					"3": { "name":"string.quoted"},
					"4": { "name":"string.quoted"},
					"5": { "name":"entity.name.function"},
					"6": { "name":"constant.language"},
					"7": { "name":"constant.numeric"}
				}
			},
			{
				"name": "keyword.operator.logical",
				"match": "(CREEP IN|CREEP OUT|CREEP|CRASH IN|CRASH OUT|CRASH|EASE IN|EASE OUT|EASE|DTL|DOLLY IN|DOLLY OUT|DOLLY|DEEPFOCUS|DEEP|DUTCH|OBLIQUE|CANTED|OVERHEAD|PAN LEFT|PAN RIGHT|PAN|PED UP|PED DOWN|PUSH IN|PUSH OUT|PUSH|SLANTED|STEADICAM|TRACKING|ZOOM IN|ZOOM OUT|ZOOM)"
			},
			{
				"match": "(CUT|DISSOLVE|FADE|BLACK|SMASH|QUICK)(.*:)?",
				"captures": {
					"1": { "name":"keyword.control.transition" },
					"2": { "name":"keyword.control.transition" }
				}
			},
			{ 
				"match": "(^|\t)([A-Za-z\\-'. ]+:)(.*)",
				"captures": {
					"1": { "name":"constant.language" },
					"2": { "name":"constant.language" },
					"3": { "name":"meta.type.annotation" }
				}
			},
			{
				"name":"comment.block",
				"match": "([#]?[A-Za-z,-]+)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.improv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.improv",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.improv"
}